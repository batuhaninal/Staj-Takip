@{
    //var studentUserId = Context.Request.RouteValues["studentId"];
}

@model IDataResult<InternshipsBook>


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-lg-3">
            @await Component.InvokeAsync("InternshipsBookPages",new {studentId = ViewBag.studentId})
        </div>
        <div class="col-sm-12 col-lg-9">
            <div class="bg-light rounded h-100 p-4">
                @if (Model.Success)
                {
                    <div class="text-center">
                    @if (Model.Data.IsTeacherChecked)
                    {
                        <div class="alert alert-success">
                            Kontrol Edildi!
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            Henüz Eğitmen Kontrolü Yapılmadı!
                        </div>
                    }
                    </div>

                    <div class="form-floating mb-3">
                        <div class="form-group">
                            <label for="dte">Tarih</label>
                            <label for="dte">@Model.Data.Date.ToShortDateString()</label>
                        </div>

                    </div>

                    <div class="form-floating mb-3">
                        <div class="form-group">
                            <label for="cont">İçerik</label>
                            <label for="cont">@Html.Raw(Model.Data.Content)</label>
                        </div>

                    </div>
                    <form asp-area="Admin" asp-controller="InternshipsBook" asp-action="CheckBook" method="post">
                        <input type="hidden" name="Id" value="@Model.Data.Id"/>
                        <input type="hidden" name="IsTeacherChecked" value="true" />
                        <input type="hidden" name="IsCompanyChecked" value="@Model.Data.IsCompanyChecked" />
                        
                        @if (!Model.Data.IsTeacherChecked)
                        {
                            <button type="submit" class="btn btn-success">Kontrol Edildi Olarak İşaretle</button>
                        }else
                        {
                            <button type="submit" disabled class="btn btn-success">Kontrol Edildi Olarak İşaretle</button>
                        }
                    </form>
                }
                else
                {
                    <h1>Lütfen Sayfa Seçiniz</h1>
                }
            </div>
        </div>
    </div>
</div>

