@{
    Layout = null;
}
@model ChangePasswordDto

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DASHMIN - Bootstrap Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/StudentTemplate/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/StudentTemplate/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/StudentTemplate/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/StudentTemplate/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sign In Start -->
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <a href="#" class="">
                                <img src="https://samsun.edu.tr/wp-content/uploads/2023/02/mavi-logo-yatay.png" alt="Logo" style="max-width: 100%;">
                            </a>
                        </div>
                        <h3 class="text-center mb-4">Şifre Değiştir</h3>
                        <form method="post" asp-area="Admin" asp-controller="Auth" asp-action="ChangePassword">
                            <input type="hidden" asp-for="UserId" value="@User.Claims.Where(c=>c.Type == "userId").Select(x=>x.Value).SingleOrDefault()" />
                            <div class="form-floating mb-3">
                                <input asp-for="Username" type="text" class="form-control" id="uName">
                                <label for="uName">Kullanıcı Adınız</label>
                            </div>
                            <div class="form-floating mb-4">
                                <input asp-for="OldPassword" type="password" class="form-control" id="psw" placeholder="Şifre">
                                <label for="psw">Eski Şifreniz</label>
                            </div>
                            <div class="form-floating mb-4">
                                <input asp-for="NewPassword" type="password" class="form-control" id="psw" placeholder="Şifre">
                                <label for="psw">Yeni Şifreniz</label>
                            </div>                           
                            <div asp-validation-summary="ModelOnly" class="text-primary"></div>
                            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Şifre Değiştir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sign In End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/StudentTemplate/lib/chart/chart.min.js"></script>
    <script src="~/StudentTemplate/lib/easing/easing.min.js"></script>
    <script src="~/StudentTemplate/lib/waypoints/waypoints.min.js"></script>
    <script src="~/StudentTemplate/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/StudentTemplate/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/StudentTemplate/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/StudentTemplate/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/StudentTemplate/js/main.js"></script>
</body>

</html>
