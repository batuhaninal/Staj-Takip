@{
}
@model List<InternshipDocument>

<div class="text-center m-3">
    <h2>Öğrenci Staj Belgeleri</h2>
</div>

<div class="p-3">
    <table id="documentList" style="width:100%;">
        <thead>
            <tr>
                <th>#</th>
                <th>Evrak Adı</th>
                <th>İşlemler</th>
                <th>Secili</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                    @foreach (var document in Model)
                    {
                    <tr>
                        <td>@document.Id</td>
                        <td>
                                @document.DocumentName
                        </td>
                        <td>
                            <div class="d-flex justify-content-around">
                                <a asp-area="" asp-controller="InternshipDocument" asp-action="ShowPdf" asp-route-documentId="@document.Id">
                                    <h5><span title="@document.DocumentName belgesini görüntüle!" class="badge bg-info">Görüntüle</span></h5>
                                    
                                </a>
                                <a asp-area="Admin" asp-controller="InternshipDocument" asp-action="CheckDocument" asp-route-documentId="@document.Id">
                                    <h5><span title="@document.DocumentName belgesini kontrol edildi olarak işaretle!" class="badge bg-success">Kontrol Edildi Olarak İşaretle</span></h5>
                                    
                                </a>
                            @*<a asp-area="Admin" asp-controller="InternshipDocument" asp-action="CheckDocument" asp-route-documentId="@document.Id">Kontrol Edildi Olarak İşaretle</a>*@
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input radioButton" type="radio" name="check" id="@document.Id">
                            </div>
                        </td>
                    </tr>
                    }
            }
            else
            {
                <tr>
                    <td></td>
                    <td>Henüz belge eklenmemiş!</td>
                    <td></td>
                    <td></td>
                </tr>
            }

        </tbody>
    </table>
    <br />
    <br />
    <div style="text-align:center">
        <h1>İmza Oluşturma</h1>

        <br />
        <br />
        <canvas id="signatureCanvas" width="250" height="100"></canvas>
        <br>

        <button id="clearButton">Temizle</button>
        <button id="saveButton">İmzayı Kaydet</button>




    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#documentList').DataTable();
        });
    </script>
    <script src="~/studenttemplate/js/signatureteacher.js"></script>
}
