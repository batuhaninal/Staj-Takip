@{
}
@model List<Message>

<table id="sendbox" class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Mesaji Ac</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Subject</td>
                <td>@item.ReceiverUser.Email</td>
                <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
                <td><a asp-area="" asp-controller="Message" asp-action="MessageDetails" asp-route-messageId="@item.Id" class="btn btn-danger">Mesaji Ac</a></td>
            </tr>
        }
    }
    else
    {
        <tr>
            Gelen Kutusu Boş!
        </tr>
    }

</table>

<a asp-area="" asp-controller="Message" asp-action="SendMessage" class="btn btn-primary">Yeni Mesaj Olustur</a>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('#sendbox').DataTable();
        });
    </script>
}
