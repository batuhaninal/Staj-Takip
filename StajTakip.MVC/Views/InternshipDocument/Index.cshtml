@{
    Layout = "_StudentLayout";
}
@model InternshipDocument
<link href="~/studenttemplate/css/style.css" rel="stylesheet" />
<div>
    <form asp-controller="InternshipDocument" asp-action="UploadPdf" method="post" enctype="multipart/form-data">

        <div class="container-fluid">
            <div class="row g-4">

                <div class="card">
                    <div class="card-header text-center">
                        <br />
                        <h3>Dosya Yükleyiniz</h3>
                        <br />
                        <input type="file" name="pdfFile" class="form-control-file" />
                    </div>
                    <button type="submit" class="btn btn-primary">Dosya Ekle</button>


                </div>
            </div>
        </div>
    </form>
    <br />
    <div class="container-fluid">
        <div class="row g-4">

            <div class="card">
                <div class="card-header text-center">
                    <div class="form-group">
                        <br />
                        <h3>Yüklenilen Dosyalar</h3>

                    </div>
                    <br />
                    @if (ViewData["documentList"]==null)
                    {
                        <h6>Henüz Pdf Yüklenmemiş.</h6>
                    }
                    else
                    {
                        <li>

                       
                        @foreach (var item in ViewData["documentList"] as List<InternshipDocument>)
                        {
                            <a  asp-area="" asp-controller="InternshipDocument" asp-action="ShowPdf" asp-route-documentId="@item.Id">
                                <button class="btn btn-primary">@item.CreatedDate.ToShortDateString() </button>

                            </a>
                                <button type="button" id="@item.Id" class="btn btn-primary signatureTest">@item.Id</button>
                        }
                        </li>
                    }


                </div>
            </div>
        </div>


        <br />

        <div style="text-align:center">
            <h1>İmza Oluşturma</h1>
           
            <br />
            <br />
            <canvas id="signatureCanvas" width="250" height="100"></canvas>
            <br>
          
            <button id="clearButton">Temizle</button>
            <button id="saveButton">İmzayı Kaydet</button>
         

          
            
        </div>


    @section Scripts{
            <script src="~/studenttemplate/js/signaturecanvas.js"></script>
    }

