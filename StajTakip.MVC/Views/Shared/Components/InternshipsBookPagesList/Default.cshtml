@{
}

@model IDataResult<List<InternshipsBook>>

<div class="card my-4">
    <h3 class="card-header">Staj Defteri Sayfaları</h3>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <h4>Sayfalar</h4>
                    <label for="pages"></label>
                    <ul>
                        @if (Model.Success)
                        {
                            @foreach (var bookPages in Model.Data)
                            {
                                <li>
                                    <a asp-controller="InternshipsBook" asp-action="Page" asp-route-id="@bookPages.Id">@bookPages.Date</a>
                                </li>
                            }
                            
                        }
                        else
                        {
                            <h5>@Model.Message</h5>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

