@model IDataResult<List<InternshipsBookPageListDto>>

<div class="card my-4">
    <h3 class="card-header">Staj Defteri Sayfaları</h3>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label for="pages"></label>
                    @if (!Model.Data.Any())
                    {

                        <h5>Henuz veri girilmemis!</h5>
                    }
                    else
                    {
                        <ol>
                            @foreach (var bookPages in Model.Data)
                            {
                                <li>
                                    <a asp-area="" asp-controller="InternshipsBook" asp-action="Page" asp-route-id="@bookPages.Id">@bookPages.Date</a>
                                </li>
                            }

                        </ol>
                        @*<div id="pageInfo">
                            @Html.PagedListPager((IPagedList)Model, currentPage=> Url.Action("BookPagePagination", new {currentPage}))
                        </div>*@
                    }
                </div>
            </div>
        </div>
    </div>
</div>



